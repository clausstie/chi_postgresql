<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>

  <!-- Description --> 
  <display-name>ChemicalInventory</display-name>
  <description>ChemicalInventory</description>

<!--  The servlet to create pdf reports. -->
  <servlet>
    <servlet-name>PdfServlet</servlet-name>
    <servlet-class>chemicalinventory.jReports.PdfServlet</servlet-class>
  </servlet>

   <servlet-mapping>
    <servlet-name>PdfServlet</servlet-name>
    <url-pattern>/servlet/PdfServlet</url-pattern>
  </servlet-mapping> 

  <!-- Define the duration of a use session --> 
  <session-config>
    <session-timeout>15</session-timeout> 
  </session-config>
  
  <!-- welcome files -->
  <welcome-file-list>
    <welcome-file>Inventory.jsp</welcome-file>
  </welcome-file-list>
  
  <!-- Error pages -->
  <error-page>
    <error-code>403</error-code>
    <location>/errorpages/error_403.html</location>
  </error-page>
     
    <resource-ref>
  		<description>ChemicalInventory JNDI Resource</description>
  		<res-ref-name>jdbc/chemicalinventory</res-ref-name>
  		<res-type>javax.sql.DataSource</res-type>
  		<res-auth>Container</res-auth>
	</resource-ref>
  
<!--Adminitrator part of CI-->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>chemicalinventory-administration</web-resource-name>
      <url-pattern>/administration/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>adm</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint></security-constraint>
  
  <!-- common part of the application -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>chemicalinventory</web-resource-name>
      <url-pattern>/report/*</url-pattern>
      <url-pattern>/jsp/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>adm</role-name>
      <role-name>normal</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint> 
  </security-constraint>
  
  <!--Sammple approver functions role = sample_approver-->
  <security-constraint>
  	<web-resource-collection>
  		<web-resource-name>chemicalinventory</web-resource-name>
  		<url-pattern>/sampleApproval/*</url-pattern>
  	</web-resource-collection>
  	<auth-constraint>
  		<role-name>sample_approver</role-name>
  	</auth-constraint>
  </security-constraint>
  
  <!--Sample creation functions role = sample_creator-->
  <security-constraint>
  	<web-resource-collection>
  		<web-resource-name>chemicalinventory</web-resource-name>
  		<url-pattern>/sample/*</url-pattern>
  	</web-resource-collection>
  	<auth-constraint>
  		<role-name>sample_creator</role-name></auth-constraint>
  </security-constraint>
  
  <!--Result entry functions role = result_entry-->
  <security-constraint>
  	<web-resource-collection>
  		<web-resource-name>chemicalinventory</web-resource-name>
  		<url-pattern>/result/*</url-pattern>
  	</web-resource-collection>
  	<auth-constraint>
  		<role-name>result_entry</role-name>
  	</auth-constraint>
  	
  <!--Display batch elements.-->
  </security-constraint>
  <security-constraint>
  	<web-resource-collection>
  		<web-resource-name>chemicalinventory</web-resource-name>
	  	<url-pattern>/batch_display/*</url-pattern>
  	</web-resource-collection>
  	<auth-constraint>
  		<role-name>batch_viewer</role-name>
  		<role-name>batch_manager</role-name>
  	</auth-constraint>
  
    <!--Batch manaager, privileges to create, modify, lock etc. on a batch.-->
  </security-constraint>
  <security-constraint>
  	<web-resource-collection>
  		<web-resource-name>chemicalinventory</web-resource-name>
  		<url-pattern>/batch/*</url-pattern>
  	</web-resource-collection>
  	<auth-constraint>
  		<role-name>batch_manager</role-name>
  	</auth-constraint>
  </security-constraint>
  
   <!-- report admin -->
  <security-constraint>
  	<web-resource-collection>
  		<web-resource-name>chemicalinventory</web-resource-name>
  		<url-pattern>/print/print_administration/*</url-pattern>
  	</web-resource-collection>
  	<auth-constraint>
  		<role-name>report_adm</role-name>
  	</auth-constraint>
  </security-constraint>
  
   <!-- report display -->
  <security-constraint>
  	<web-resource-collection>
  		<web-resource-name>chemicalinventory</web-resource-name>
  		<url-pattern>/print/*</url-pattern>
  	</web-resource-collection>
  	<auth-constraint>
  		<role-name>report_display</role-name>
  	</auth-constraint>
  </security-constraint>

<!-- login configuration -->
  <login-config>
    <auth-method>FORM</auth-method>
    <form-login-config>
      <form-login-page>/Login.jsp</form-login-page>
      <form-error-page>/Login.jsp?login_error=yes</form-error-page>
    </form-login-config>
  </login-config>
  
  <!-- Security roles referenced by this web application -->
  <security-role>
    <role-name>normal</role-name>
  </security-role>
  <security-role>
    <role-name>adm</role-name>
  </security-role>
    <security-role>
  	<role-name>sample_approver</role-name>
  </security-role>
  <security-role>
  	<role-name>sample_creator</role-name>
  </security-role>
  <security-role>
  	<role-name>batch_viewer</role-name>
  </security-role>
  <security-role>
  	<role-name>batch_manager</role-name>
  </security-role>
  <security-role>
  	<role-name>result_entry</role-name>
  </security-role>
    <security-role>
    <role-name>report_display</role-name>
  </security-role>
    <security-role>
    <role-name>report_adm</role-name>
  </security-role>         
</web-app>